#!/bin/bash -x
set -e
cd "$(dirname "$0")"/..

mkdir -p build
BUILD_DOCKERFILE=build/tester.Dockerfile
cat <<EOT > $BUILD_DOCKERFILE
FROM python:3.6
EOT

IMAGE=spinnaker-aws-policy:tester
docker build -t ${IMAGE} -f ${BUILD_DOCKERFILE} .

rm ${BUILD_DOCKERFILE}

docker run --rm \
    -v "$(pwd)/src:/armory/src" \
    --workdir=/armory \
    ${IMAGE} \
    nosetests -v